@model School.Web.Models.ViewModels.ClassViewModel
@{
    ViewBag.Title = "Добавить класс";
}

<div class="row">
    <div class="span3">
        <ul class="widget widget-menu unstyled">
            <li>
                <a href="@Url.Action("Index", "Class")">
                    <i class="menu-icon icon-circle-arrow-left"></i>Назад
                </a>
            </li>
        </ul>
    </div>
</div>

<div class="module">
    <div class="module-head">
        <h3>Добавление класса</h3>
    </div>
    <div class="module-body">
        <form class="form-horizontal row-fluid" action="@Url.Action("Create")" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.ClassId)

            <div class="control-group">
                <label class="control-label" for="basicinput">Номер</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Number, new { @class = "span8", @placeholder = "Введите номер..." })
                    @Html.ValidationMessageFor(m => m.Number)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="basicinput">Постфикс</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Prefix, new { @class = "span8", @placeholder = "Введите постфикс..." })
                    @Html.ValidationMessageFor(m => m.Prefix)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="basicinput">Направленность</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Direction, new { @class = "span8", @placeholder = "Введите направленность..." })
                    @Html.ValidationMessageFor(m => m.Direction)
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-success">Сохранить</button>
                </div>
            </div>
        </form>
    </div>
</div>