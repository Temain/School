@model IEnumerable<School.Web.Models.ViewModels.TeacherViewModel>
@{
    ViewBag.Title = "Персонал";
}

<div class="row">
    <div class="span3">
        <ul class="widget widget-menu unstyled">
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="menu-icon icon-circle-arrow-left"></i>К разделам
                </a>
            </li>
        </ul>
    </div>

    <div class="span3">
        <ul class="widget widget-menu unstyled">
            <li>
                <a href="@Url.Action("Create")">
                    <i class="menu-icon icon-plus"></i>Добавить
                </a>
            </li>
        </ul>
    </div>
</div>

<div class="module">
<div class="module-head">
    <h3>
        Персонал
    </h3>
</div>
<div class="module-body table">
    <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display"
           width="100%">
        <thead>
            <tr>
                <th>
                    Фамилия
                </th>
                <th>
                    Имя
                </th>
                <th>
                    Отчество
                </th>
                <th>
                    Специализация
                </th>
                <th>
                    Дата рождения
                </th>
                <th>
                    Дата найма
                </th>
                <th class="center">
                    Действия
                </th>
            </tr>
        </thead>
        <tbody>
            @{ 
                var index = 0;
                foreach (var teacher in Model)
                {
                    <tr class="@(index % 2 == 0 ? "even" : "odd") gradeX">
                        <td>
                            @teacher.LastName
                        </td>
                        <td>
                            @teacher.FirstName
                        </td>
                        <td>
                            @teacher.MiddleName
                        </td>
                        <td>
                            @teacher.Speciality
                        </td>
                        <td class="center">
                            @(teacher.BirthDate != null ? teacher.BirthDate.Value.ToShortDateString() : "")
                        </td>
                        <td class="center">
                            @(teacher.HireDate != null ? teacher.HireDate.Value.ToShortDateString() : "")
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = teacher.TeacherId })"><i class="icon-pencil" style="color: green;"></i></a>
                            <a href="@Url.Action("Delete", new { id = teacher.TeacherId })"><i class="icon-trash" style="color: red;"></i></a>
                        </td>
                    </tr>
                }
            }               
        </tbody>
        @*<tfoot>
            <tr>
                <th>
                    Rendering engine
                </th>
                <th>
                    Browser
                </th>
                <th>
                    Platform(s)
                </th>
                <th>
                    Engine version
                </th>
                <th>
                    CSS grade
                </th>
            </tr>
        </tfoot>*@
    </table>
</div>
</div>